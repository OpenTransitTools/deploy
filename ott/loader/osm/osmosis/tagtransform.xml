<?xml version="1.0"?>
<!--

bin/osmosis --read-xml file=../cache/portland.osm  --tag-transform file=./tagtransform.xml --tf reject-node todo=delete_me  --tf reject-way todo=delete_me --tf reject-relation todo=delete_me --write-xml file=../cache/portland-pelias.osm

NOTES:
  https://www.openandromaps.org/en/map-basics-2/tagtransform
-->
<translations>
  <translation>
    <name>Eliminate Transit junk from OSM</name>
    <description>Remove all public_transit marked elements in OSM</description>
    <match>
      <match type="node" mode="or">
        <tag k="public_transport" v=".*"/>
        <tag k="public_transport:version" v=".*"/>
        <tag k="public_transport:version" v=".*"/>
        <tag k="vending" v="public_transport_tickets"/>
        <tag k="railway|highway" v="bus_stop|tram_stop" />
      </match>
    </match>
    <output>
      <copy-unmatched/>
      <tag k="todo" v="delete_me"/>
    </output>
  </translation>
</translations>